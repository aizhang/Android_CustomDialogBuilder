<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_layout" >

    <LinearLayout
        android:id="@+id/dialog_base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:background="@drawable/bg_dialogheader"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dialog_title_padding_horizontal"
        android:paddingRight="@dimen/dialog_title_padding_horizontal" >

        <TextView
            android:id="@+id/dialog_base_title"
            style="@style/White_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:background="@null"
            android:gravity="center_vertical"
            android:textSize="@dimen/dialog_title_text_size" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/dialog_base_content_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" 
        android:background="@drawable/bg_dialogbody"
        >

        <LinearLayout
            android:id="@+id/dialog_base_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/dialog_base_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dialog"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp" >
    </LinearLayout>

</LinearLayout>